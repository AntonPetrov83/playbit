    {
      "label": "! run tests",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "playdate: build and run tests",
        "love2d: build and run tests",
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        // lua preprocess errors
        {
          "owner": "lua",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": {
            "regexp": "^(.+) @ <meta>:(\\d+): (.*)$",
            "line": 2,
            "severity": 1,
            "message": 3
          },
        },
        // lua compiler errors
        {
          "owner": "lua",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": {
            "regexp": "^(.*): (.*):(\\d+): (.*)$",
            "file": 2,
            "line": 3,
            "column": 5,
            "severity": 1,
            "message": 4
          },
        }
      ]
